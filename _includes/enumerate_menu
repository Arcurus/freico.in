{% for navitem in menu %}
  {% assign _classes = '' %}
  {% if page.url == navitem.url %}
    {% unless no_active %}
      {% assign _classes = 'active' %}
    {% endunless %}
  {% else %}
    {% assign _classes = false %}
  {% endif %}

  <li{% if _classes %} class="{{ _classes }}"{% endif %}><a href="{{ navitem.url|replace:'/index.html','/' }}"{% if _classes %} class="active"{% endif %}
      >{{ navitem.title }}</a></li>
{% endfor %}

